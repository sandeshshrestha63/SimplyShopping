@model e_commerce.Models.ChangePassword
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Category</h1>
    <a href="@Url.Action("Categories","Admin")" class="d-sm-inline-block btn btn-sm btn-primary ">
        <i class="fas  text-white-50"></i> Back
    </a>
</div>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        @*<h6 class="m-0 font-weight-bold text-primary">Add New Category</h6>*@
    </div>
    <div class="card-body">
        @using (Html.BeginForm("ChangePassword", "AdminAccount", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            if(ViewData["Message"] != null)
            {
                <div class="alert alert-success">Password Changes Successfully</div>
            }
            <div class="row form-group">
                <div class="col-md-2">
                    <label class="control-label" style="margin-top:5px;">Old Password</label>
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.OldPassword, new { @class = "form-control",@type="password", required = "required", autofocus = "autofocus" })
                    @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2">
                    <label class="control-label" style="margin-top:5px;">New Password:</label>
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.NewPassword, new { @class = "form-control", @type = "password", required = "required", autofocus = "autofocus" })
                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                </div>

            </div>
            <div class="row form-group">
                <div class="col-md-2">
                    <label class="control-label" style="margin-top:5px;">Confirm Password:</label>
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "form-control", @type = "password", required = "required", autofocus = "autofocus" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
               

            </div>
            
            <a onclick="window.history.back()" class="btn btn-danger">Cancel</a>
            <input type="submit" class="btn btn-success" value="Save" />
        }

    </div>
</div>
